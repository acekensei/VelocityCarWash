@model CarWashClient.Models.Vehicle

@{
    ViewData["Title"] = "Add A Vehicle";
}

<h3 class="bill-header-h3">Add A Vehicle</h3>
    <hr />
    <div class="row">
        <div class="col-md-6 mx-auto pb-5">
            <form asp-action="Create" class="border p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CarType" class="control-label"></label>
                    <input asp-for="CarType" class="form-control" />
                    <span asp-validation-for="CarType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <a asp-action="Index" class="btn btn-warning pt-1 pb-1 btn-lg ml-3">Back</a>
                    <input type="submit" value="Create" class="btn btn-lg pt-1 pb-1" style="background-color: #C68B96" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
