@model CarWashClient.Models.Washer

@{
    ViewData["Title"] = "Delete Washer Info";
}

<h3 class="bill-header-h3">Delete this Washer</h3>
<div>
    <dl class="row">
        <div class="col-md-6 mx-auto pb-5">
            <div class="border p-4 rounded shadow">
                <h5>Are you sure you want to delete this?</h5>
                <hr />
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @* @Html.DisplayNameFor(model => model.WasherName) *@
                    Washer Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WasherName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsAvailable)
                </dd>
                <form asp-action="Delete" class="form-group mt-4 text-center">
                    <a asp-action="Index" class="btn btn-warning pt-1 pb-1 btn-lg ml-3">Back</a>
                    <button type="submit" value="Delete" class="btn btn-lg pt-1 pb-1" style="background-color: #C68B96">Delete</button>
                </form>
            </div>
        </div>
    </dl>
</div>
