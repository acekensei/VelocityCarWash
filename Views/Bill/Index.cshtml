@* @model IEnumerable<CarWashClient.Models.Bill> *@
@model CarWashClient.Models.ViewModels.BillVM

@{
    ViewData["Title"] = "List of Bills";
}

<h3 class="bill-header-h3">List of Bills</h3>
<div class="table-responsive" style="margin-top: -10px;">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Washer
                </th>
                <th>
                    Vehicle
                </th>
                <th>
                    Fee
                </th>
                <th>
                    Method
                </th>
                <th>
                    Status
                </th>
                <th style="text-align: center;">
                    <a asp-action="Create" class="btn pt-1 pb-1 pr-1 pl-1" style="background-color: #C68B96">Book</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Washer.WasherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle.CarType)
                    </td>
                    <td>
                        $ @Html.DisplayFor(modelItem => item.Charge) USD
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod.MethodType)
                    </td>
                    <td>
                        @if (item.IsComplete == true)
                        {
                            <p>Complete</p>
                        }
                        else
                        {
                            <form method="post" asp-controller="Bill" asp-action="MarkComplete">
                                <input type="hidden" name="billId" value="@item.Id" />
                                <input type="hidden" name="washerId" value="@item.WasherId" />
                                <button class="mark-complete-button btn btn-success" type="submit">
                                    Mark Complete
                                </button>
                            </form>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>
                        <a asp-action="ViewBill" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Bill/Index?currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i < Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item"><a class="page-link active" href="/Bill/Index?currentPage=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/Bill/Index?currentPage=@i">@i</a></li>
                }
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Bill/Index?currentPage=@(Model.CurrentPage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>