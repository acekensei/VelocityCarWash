@model CarWashClient.Models.Bill

@{
    ViewData["Title"] = "Delete A Bill";
}

<h3 class="bill-header-h3">Delete this Bill</h3>
<div>
    <dl class="row">
        <div class="col-md-6 mx-auto pb-5">
            <div class="border p-4 rounded shadow">
                <h5>Are you sure you want to delete this?</h5>
                <hr />
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CustomerName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CustomerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.WasherId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Washer.WasherName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VehicleTypeId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehicle.CarType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Charge)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Charge)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentMethodId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentMethod.MethodType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsComplete)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsComplete)
                </dd>
                <form asp-action="Delete" class="form-group mt-4 text-center">
                    <a asp-action="Index" class="btn btn-warning pt-1 pb-1 btn-lg ml-3">Back</a>
                    <button type="submit" value="Delete" class="btn btn-lg pt-1 pb-1" style="background-color: #C68B96">Delete</button>
                </form>
            </div>
        </div>
    </dl>
</div>
